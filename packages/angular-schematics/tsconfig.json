{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowUnreachableCode": false,
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "pretty": true,
    "rootDir": "src",
    "target": "es2017",
    "outDir": "dist"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
